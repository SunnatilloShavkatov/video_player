<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="backgroundTint">@color/main_dark</item>
        <item name="background">@color/main_dark</item>
    </style>

</resources>
