<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:id="@android:id/background">
                <shape android:shape="rectangle">
                    <gradient android:angle="98.19" android:endColor="#102E3B" android:startColor="#102E3B" android:type="linear" />
                    <gradient android:angle="0" android:endColor="#2F2F2F" android:startColor="#2F2F2F" android:type="linear" />
                    <stroke android:width="1px" android:color="@android:color/transparent" />
                    <corners android:radius="70px" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
